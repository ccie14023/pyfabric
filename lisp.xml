<router>
  <lisp>
    <encapsulation>
      <vxlan/>
    </encapsulation>
    <locator-table>
      <default/>
    </locator-table>
    <locator-set>
      <name>rloc1</name>
      <IPv4-interface>
        <name>Loopback0</name>
        <priority>10</priority>
        <weight>10</weight>
      </IPv4-interface>
    </locator-set>
    <eid-table>
      <instance-list>
        <instance-id>0</instance-id>
        <default/>
      </instance-list>
      {% for vrf in vrfs %}
        <instance-list>
        <instance-id>10</instance-id>
        <vrf>{{ vrf }}</vrf>
        {% for subnet in subnets %}
        <dynamic-eid>
          <name>Employee_172_16_101_0</name>
          <database-mapping>
            <eid-prefix>172.16.101.0/24</eid-prefix>
            <locator-set>rloc1</locator-set>
          </database-mapping>
        </dynamic-eid>
        {% endfor %}
      </instance-list>
      {% endfor %}
    </eid-table>
    <disable-ttl-propagate/>
    <ipv4>
      <sgt/>
      <use-petr>
        <locator-address>{{ border_ip }}</locator-address>
      </use-petr>
      <itr>
        <map-resolver>
          <ip-addr>{{ border_ip }}</ip-addr>
        </map-resolver>
      </itr>
      <itr-enable>
        <itr/>
      </itr-enable>
      <etr>
        <map-server>
          <ip-addr>{{ border_ip }}</ip-addr>
        <key>
          <key-0>uci</key-0>
        </key>
        </map-server>
      </etr>
      <etr-enable>
        <etr/>
      </etr-enable>
    </ipv4>
  </lisp></router>